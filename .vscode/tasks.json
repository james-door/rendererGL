{
    "tasks": [
        {
            "type": "shell",
            "label": "MSVC Debug Build",
            "windows": {
                "command": "${workspaceFolder}/debugMSVC.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "GCC Debug Build",
            "linux": {
                "command": "bash ${workspaceFolder}/debugGCC.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
    "version": "2.0.0"
}