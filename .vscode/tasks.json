{
    "tasks": [
        {
            "type": "shell",
            "label": "DebugEGL",
            "linux": {
                "command": "${workspaceFolder}/debugGCC.sh",
                "args": ["EGL"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "DebugX11",
            "linux": {
                "command": "${workspaceFolder}/debugGCC.sh",
                "args": ["X11"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "ReleaseX11",
            "linux": {
                "command": "${workspaceFolder}/releaseGCC.sh",
                "args": ["X11"]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
    "version": "2.0.0"
}